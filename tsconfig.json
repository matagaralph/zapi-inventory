{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,

    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "allowJs": true,
    "checkJs": false,

    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
